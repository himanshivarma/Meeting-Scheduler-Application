<!-- row_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_meeting_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/text_meeting_date"
        app:layout_constraintStart_toEndOf="@+id/text_meeting_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_meeting_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_meeting_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_meeting_time" />

    <TextView
        android:id="@+id/text_meeting_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_meeting_time"
        app:layout_constraintEnd_toStartOf="@+id/text_meeting_time"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
